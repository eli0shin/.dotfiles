{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "DISABLE_TELEMETRY": "0"
  },
  "teammateMode": "tmux",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(bun add:*)",
      "Bash(bun run:*)",
      "Bash(bun test:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh release list:*)",
      "Bash(gh release view:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(git add:*)",
      "Bash(git describe:*)",
      "Bash(git log:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git rev-parse:*)",
      "Bash(git stash:*)",
      "Bash(git tag:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(node:*)",
      "Bash(npm install:*)",
      "Bash(npm ls:*)",
      "Bash(npm run build:*)",
      "Bash(npm run format:*)",
      "Bash(npm run format:check:*)",
      "Bash(npm run lint)",
      "Bash(npm run type:*)",
      "Bash(npm test:*)",
      "Bash(npm view:*)",
      "Bash(npx:*)",
      "Bash(tmux capture-pane:*)",
      "Bash(tmux display-message:*)",
      "Bash(tmux kill-session:*)",
      "Bash(tmux list-panes:*)",
      "Bash(tmux list-sessions:*)",
      "Bash(tmux new-session:*)",
      "Bash(tmux send-keys:*)",
      "mcp__chrome-devtools",
      "mcp__tmux",
      "WebFetch(domain:ai-sdk.dev)",
      "WebFetch(domain:arxiv.org)",
      "WebFetch(domain:bun.com)",
      "WebFetch(domain:bun.sh)",
      "WebFetch(domain:christopher.xyz)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:eslint.org)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:prettier.io)",
      "WebFetch(domain:stackoverflow.com)",
      "WebFetch(domain:www.nngroup.com)",
      "WebSearch"
    ],
    "deny": []
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/scripts/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "eslint-plugin@cli-lsp-client-plugins": true,
    "prettier-plugin@cli-lsp-client-plugins": true,
    "lsp-plugin@cli-lsp-client-plugins": true
  },
  "syntaxHighlightingDisabled": false,
  "alwaysThinkingEnabled": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754020113523
  }
}
