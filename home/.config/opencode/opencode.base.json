{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "autoshare": false,
  "autoupdate": true,
  "agent": {},
  "mcp": {
    "search": {
      "type": "local",
      "command": ["bun", "x", "@modelcontextprotocol/server-brave-search"],
      "enabled": true,
      "environment": {
        "BRAVE_API_KEY": "{env:BRAVE_API_KEY}"
      }
    }
  },
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "keybinds": {
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "input_delete_to_line_start": "none",
    "input_delete": "delete,shift+delete"
  },
  "tools": {
    "search_brave_local_search": false
  }
}
