{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "autoshare": false,
  "autoupdate": true,
  "agent": {
    "build": {
    },
    "ultrathink": {
      "thinking": {
        "type": "enabled",
        "budgetTokens": 31999
      }
    },
    "plan": {
      "thinking": {
        "type": "enabled",
        "budgetTokens": 31999
      }
    }
  },
  "mcp": {
    "search": {
      "type": "local",
      "command": ["bun", "x", "@modelcontextprotocol/server-brave-search"],
      "enabled": true,
      "environment": {
        "BRAVE_API_KEY": "{env:BRAVE_API_KEY}"
      }
    }
  },
  "tools": {
    "search_brave_local_search": false
  }
}
