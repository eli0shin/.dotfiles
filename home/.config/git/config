[branch]
	sort = -committerdate

[tag]
	sort = version:refname

[column]
	ui = auto

[core]
	editor = nvim
	pager = delta
	fsmonitor = true

[delta]
	navigate = true
	side-by-side = true
	line-numbers = true

[diff]
	colorMoved = default
	algorithm = histogram

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[interactive]
	diffFilter = delta --color-only

[push]
	autoSetupRemote = true

[fetch]
	all = true
	prune = true
	pruneTags = true
	writeCommitGraph = true

[init]
	defaultBranch = main

[commit]
	verbose = true

[merge]
	conflictstyle = zdiff3

[pull]
	rebase = true

[rebase]
	autosquash = true
	autostash = true
	updateRefs = true

[rerere]
	enabled = true
	autoupdate = true

[include]
	path = ~/.config/git/config.local
